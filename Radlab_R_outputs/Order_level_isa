
#Convert to order level
order_radseq_RA <- tax_glom(radseq_RA, taxrank ="Order")
#Order ISA
order_isa_rad <- multipatt(t(otu_table(order_radseq_RA)), cluster = sample_data(order_radseq_RA)$`ionizing_radiation`)
summary(order_isa_rad) #---> no significant order
# Extract taxonomy table
order_taxtable <- tax_table(order_radseq_RA) %>% as.data.frame() %>% rownames_to_column(var="ASV")
order_res <- order_isa_rad$sign %>%
  rownames_to_column(var="ASV") %>%
  left_join(order_taxtable) %>%
  filter(p.value <= 0.05) 
View(order_res)
